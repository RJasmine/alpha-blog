<div class="pt-5">
<% if @article.errors.any? %>
<h2 class="pt-5">The following errors prevented the article from being created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
</div>


<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <%= form_for @article do |f| %>
    <div class="form-group pt-2">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control", placeholder:"Title of article", autofocus:true %>
    </div>
    <div class="form-group pt-2">
      <%= f.label :description %></br>
      <%= f.text_area :description, rows:10, class:"form-control", placeholder:"Description of article", autofocus:true %>
    </div>

    <div class="pb-5">
      <%= f.submit class: "btn btn-primary" %>
    </div>
    <% end %>
    <div>
      <%= link_to "Cancel and Back to articles listing", articles_path %>
  </div>
  </div>
</div>
