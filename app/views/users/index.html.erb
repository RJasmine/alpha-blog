<h3 class="text-center">All Alpha Bloggers</h3>
<div class="d-flex justify-content-center">
  <%= will_paginate @articles, list_classes:%w(pagination), previous_label:"Previous", next_label: "Next" %>
</div>
<% @users.each do |user| %>

  <ul class="text-center list-unstyled mb-4">
    <div class="row">
      <div class="card col-sm-4 offset-sm-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), method: :delete,
                  data: {confirm: "Are you sure you want to delete the user and all their articles?"} %></li>
        <% end %>

     </div>
   </div>
 </ul>

<% end %>
<div class="d-flex justify-content-center">
  <%= will_paginate %>
</div>
</div>
